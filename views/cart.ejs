<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
</head>
<body>
    <h1>Your Shopping Cart</h1>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            <% if (cart.length === 0) { %>
                <tr>
                    <td colspan="3">Your cart is empty</td>
                </tr>
            <% } else { %>
                <% cart.forEach(item => { %>
                    <tr>
                        <td><%= item.product_name %></td>
                        <td><%= item.price %></td>
                        <td><%= item.quantity %></td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
    <a href="/checkout">Proceed to Checkout</a>
</body>
</html>
